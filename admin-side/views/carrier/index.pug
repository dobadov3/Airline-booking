extends ../layouts/layout
block contents
    .row
      .col-lg-12.grid-margin.stretch-card
        .card
          .card-body
            h4.card-title Airbus
            |
            button.btn.btn-inverse-success.btn-icon.m-2(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo")
              i.mdi.mdi-plus
            #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    h5#exampleModalLabel.modal-title New Carrier
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') &times;
                  .modal-body
                    form(method="POST", action="/carriers/create")
                      .form-group
                        label.col-form-label(for='name') Tên hãng
                        input#name.form-control(type='text' name='name')
                      .form-group
                        label.col-form-label(for='code') Mã hãng
                        input#code.form-control(type='text' name="code")
                      .modal-footer
                        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                        button.btn.btn-primary(type='submit') Create
            .table-responsive
              table.table.table-striped
                thead
                  tr
                    th Tên hãng
                    th Mã hãng
                    th
                tbody
                  each carrier in carriers 
                        tr
                            td= carrier.name 
                            td= carrier.code
                            td
                                a(href="/carriers/edit/" + carrier._id)
                                    button.btn.btn-inverse-primary.btn-icon.m-2(type='button')
                                        i.mdi.mdi-pencil
                                button.btn.btn-inverse-danger.btn-icon.m-2(type='button' data-toggle="modal" data-target="#btn-confirm" + carrier.code)
                                    i.mdi.mdi-delete
                                .modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true' id="btn-confirm" + carrier.code)
                                  .modal-dialog.modal-dialog-centered(role='document')
                                    .modal-content
                                      .modal-header
                                        h5#exampleModalLabel.modal-title Warrning
                                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                                          span(aria-hidden='true') &times;
                                      .modal-body
                                        | Bạn có thật sự muốn xóa không?
                                      .modal-footer
                                        button.btn.btn-secondary(type='button', data-dismiss='modal') Không
                                        a(href="/carriers/delete/" + carrier._id) 
                                          button.btn.btn-primary(type='button') Xóa
